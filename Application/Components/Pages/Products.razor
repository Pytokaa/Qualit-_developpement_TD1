@using Application.Models
@using Application.Services
@page "/products"
@attribute [StreamRendering]
@inject ProductWSService _WebService


<PageTitle>Products</PageTitle>

@if (products == null)
{
    <p>
        <em>Loading...</em>
    </p>   
}
else{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>NomPhoto</th>
        </tr>
        </thead>
        <tbody>
        @if (products.Count == 0)
        {
            <p>Y'a rien frr</p>
        }
        else
        {
            @foreach (var product in products)
            {
                <tr style="cursor:pointer" @onclick="() => NavigateToDetail(product.IdProduit)">
                    <td>@product.IdProduit</td>
                    <td>@product.NomProduit</td>
                    <td>@product.Description</td>
                    <td>@product.NomPhoto</td>
                </tr>
            }
        }
        
        </tbody>
    </table>
}

@code{

    private List<Product>? products;


    protected override async Task OnInitializedAsync()
    {
        products = await _WebService.GetAllAsync();
    }
    [Inject] private NavigationManager Navigation { get; set; } = null!;

    private void NavigateToDetail(int id)
    {
        Navigation.NavigateTo($"/product/{id}");
    }

}